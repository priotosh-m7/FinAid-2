<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad4"
    android:backgroundTintMode="src_atop"
    tools:context=".MainActivity"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ip"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="290dp">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/gsbutton"
            android:layout_width="379dp"
            android:layout_height="78dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="135dp"
            android:fontFamily="@font/abeezee"
            android:shadowColor="@color/secondaryColor"
            android:shadowDx="7"
            android:shadowDy="7"
            android:shadowRadius="7"
            android:text="Get Started"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textColorHighlight="@color/purple_500"
            android:textColorLink="@color/purple_200"
            android:textSize="34sp"
            app:backgroundTint="#701cb0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gpbutton"
            android:layout_width="379dp"
            android:layout_height="78dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/abeezee"
            android:shadowColor="@color/secondaryColor"
            android:shadowDx="7"
            android:shadowDy="7"
            android:shadowRadius="7"
            android:text="Graphic Primitives"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textColorHighlight="@color/purple_500"
            android:textColorLink="@color/purple_200"
            android:textSize="34sp"
            app:backgroundTint="#701cb0" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>